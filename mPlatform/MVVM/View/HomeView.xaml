                    Margin="0,0,0,10">
                    <Border Width="300"
                    Height="200"
                    Background="Orange">
                        <Border.Clip>
                            <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,400,200"/>
                        </Border.Clip>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="TEST TEXT 1"
                                   Foreground="Green"
                                   FontSize="28"
                                   Margin="20,10,10,0"
                                   />
                                <TextBlock Text="TEST TEXT 2"
                                   Foreground="Blue"
                                   FontSize="28"
                                   Margin="20,10,10,0"
                                   />
                            </StackPanel>
                            <Image Width="100" Height="100"
                           Source="/Images/1.jpg"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"/>
                        </Grid>

                    </Border>
                    <Border Width="200" Height="200" CornerRadius="10" Margin="45,0,0,0" Background="HotPink">
